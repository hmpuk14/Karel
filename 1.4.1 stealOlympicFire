void stealOlympicFire () {
    repeat (6) {
        moveForward();
        turnLeft();
        moveForward();
        turnRight();    
    }
    moveForward();
    pickBeeper();
    moveForward();
    turnRight();
    while (frontIsClear()) {
        moveForward();        
    }
    turnLeft();
    moveForward();
}
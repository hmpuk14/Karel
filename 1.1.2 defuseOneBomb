void defuseOneBomb () {
    while (frontIsClear ()) {
        moveForward();
        if (onBeeper ()) {
            pickBeeper();    
        }        
    }
    if (leftIsClear ()) {
        turnAround();
    }
    while (frontIsClear ()) {
        moveForward();
    }
}

/*2. LÃ¶sung mit repeat:*/

void defuseOneBomb () {
    repeat (9) {
        moveForward();
    }
    pickBeeper();
    turnLeft();
    moveForward();
    turnLeft();
    repeat (9) {
        moveForward();
    }
}
